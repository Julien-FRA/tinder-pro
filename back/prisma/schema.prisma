generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  //provider = "postgresql"
  provider = "sqlite"
}

model CandidateUser {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String
  lastName  String
  email     String   @unique
  password  String   @map("hashed_password")
  phone     String?
}

model RecruiterUser {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  enterprise String
  name       String
  email     String   @unique
  password  String   @map("hashed_password")
  phone      String?
}
